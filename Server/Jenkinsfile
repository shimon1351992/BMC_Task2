pipeline {
    agent {
       label 'slave1'   
    }

    stages {
        stage('directory') {
            steps {
                echo 'Building..'
                sh """ls"""
            }
        }
        
        stage('Build') {
            steps {
                sh "chmod a+x -R ${env.WORKSPACE}"
                sh """
                  Server/Server.java
                """
            }
        }
        stage('Run') {
            steps {
              sh """
              cd Server
              java Server ${HOSTNAME} ${PATH1}
              """
            }
        }
    
  
  } 
}
